<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainLayout"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:backgroundt="@color/viewBgColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myTextView1"
        android:text="@string/tv1Text"
        android:textColor="@color/textColor"
        android:textsize="14pt"
        android:gravity="center"
        android:fontFamily="@font/cambria"
        android:textStyle="bold"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:id="@+id/convertButton"
        android:text="@string/btnText"
        android:textColor="@color/textColor"
        android:textSize="11pt"
        android:background="@color/btnColor"
        android:fontFamily="@font/lucida"
        android:layout_below="@id/myTextView1">

    </Button>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt"
        android:id="@+id/space1"
        android:layout_below="@id/convertButton">

    </Space>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/child1"
        android:orientation="horizontal"
        android:layout_below="@id/space1">


        <EditText
            android:layout_width="0dip"
            android:layout_height="20pt"
            android:id="@+id/inputText"
            android:layout_weight="0.2"
            android:text="@string/inputText"
            android:textColor="@color/textColor"
            android:textSize="10pt"
            android:textStyle="bold"
            android:fontFamily="@font/cambria"
            android:layout_gravity="center"
            android:background="@color/etBgColor"
            android:inputType="number"
            android:hint="@string/hint">

        </EditText>

        <Spinner
            android:layout_width="0dip"
            android:layout_height="20pt"
            android:id="@+id/oriList"
            android:layout_weight="0.24"
            android:entries="@array/temptList"
            android:prompt="@string/inputPrompt"
            android:spinnerMode="dialog"
            android:gravity="center">

        </Spinner>

        <TextView
            android:layout_width="0dip"
            android:layout_height="20pt"
            android:id="@+id/myTextView2"
            android:layout_weight="0.12"
            android:text="@string/tv2Text"
            android:textColor="@color/textColor"
            android:textSize="14pt"
            android:textStyle="bold"
            android:fontFamily="@font/cambria"
            android:gravity="center" >

        </TextView>

        <EditText
            android:layout_width="0dip"
            android:layout_height="20pt"
            android:id="@+id/outputText"
            android:layout_weight="0.2"
            android:text="@string/inputText"
            android:textColor="@color/textColor"
            android:textSize="10pt"
            android:textStyle="bold"
            android:fontFamily="@font/cambria"
            android:gravity="center"
            android:background="@color/etBgColor"
            android:inputType="number"
            android:enabled="false" >

        </EditText>

        <Spinner
            android:layout_width="0dip"
            android:layout_height="20pt"
            android:id="@+id/convList"
            android:layout_weight="0.24"
            android:entries="@array/temptList"
            android:prompt="@string/inputPrompt"
            android:spinnerMode="dialog"
            android:gravity="center" >

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/child2"
        android:orientation="horizontal"
        android:layout_below="@id/child1"
        android:layout_marginTop="5pt">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkRounded"
            android:text="@string/chkRound"
            android:textSize="8pt"
            android:gravity="center"
            android:checked="true">

        </CheckBox>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkFormula"
            android:text="@string/chkForm"
            android:textSize="8pt"
            android:gravity="center">

        </CheckBox>


    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:gravity="center"
        android:layout_marginTop="5pt"
        android:orientation="horizontal"
        android:layout_below="@id/child2">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbTemp"
            android:text="@string/rbTemp"
            android:checked="true">

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbDist"
            android:text="@string/rbDist">

        </RadioButton>



    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbWeight"
        android:text="@string/rbWeight">

    </RadioButton>
    </RadioGroup>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/table"
        android:layout_below="@+id/imgFormula"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5pt"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/header_style"
            android:padding="5dp"
            android:text="@string/rbTemp"
            android:textcolor="#FFFFFF"
            android:textstyle="bold">

            <TextView
                android:id="@+id/tv12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_style"
                android:padding="5dp"
                android:text="0°C"/>

            <TextView
                android:id="@+id/tv13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_style"
                android:padding="5dp"
                android:text="32°F"/>

            <TextView
                android:id="@+id/tv14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_style"
                android:padding="5dp"
                android:text="273.15 K"/>


        </TableRow>
        <TableRow
            android:id="@+id/tv21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/header_style"
            android:padding="5dp"
            android:text="@string/rbDist"
            android:textcolor="#FFFFFF"
            android:textstyle="bold"/>

        <TextView
            android:id="@+id/tv22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_style"
            android:padding="5dp"
            android:text="1 Meter"/>

        <TextView
            android:id="@+id/tv23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_style"
            android:padding="5dp"
            android:text="39.3701 Inch"/>


        <TextView
            android:id="@+id/tv24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_style"
            android:padding="5dp"
            android:text="3.2808 feet"/>




        <TableRow
            android:id="@+id/tv31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/header_style"
            android:padding="5dp"
            android:text="@string/rbWeight"
            android:textcolor="#FFFFFF"
            android:textstyle="bold"/>

        <TextView
            android:id="@+id/tv32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_style"
            android:padding="5dp"
            android:text="1 Kg"/>

        <TextView
            android:id="@+id/tv33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_style"
            android:padding="5dp"
            android:text="35.2740 ounce"/>

        <TextView
            android:id="@+id/tv34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_style"
            android:padding="5dp"
            android:text="2.2046"/>

    </TableLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgFormula"
        android:src="@drawable/temperature"
        android:layout_below="@+id/table"
        android:layout_marginTop="1pt"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>